<body class="bg-gray-50 p-4">
    <div class="max-w-md mx-auto bg-white p-6 rounded-xl shadow-md">
        <h2 class="text-xl font-bold text-blue-900 mb-6">Relatoria de Processo</h2>
        
        <form id="formFiscalizacao">
            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Conselheiro(a)</label>
                <input type="text" id="conselheiro" class="w-full p-2 border rounded mt-1" placeholder="Seu nome" required>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Institui√ß√£o</label>
                <input type="text" id="instituicao" class="w-full p-2 border rounded mt-1" placeholder="Ex: Casa de Deus" required>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-bold text-gray-700">Assunto</label>
                <select id="assunto" class="w-full p-2 border rounded mt-1">
                    <option value="inscricao_nova">Pedido de inscri√ß√£o nova</option>
                    <option value="inclusao_servico">Inclus√£o de a√ß√£o ou servi√ßos</option>
                    <option value="alteracao_modalidade">Altera√ß√£o de modalidade (Anexo I)</option>
                    <option value="acompanhamento_anual">Acompanhamento anual</option>
                </select>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white font-bold py-3 rounded-lg mt-4 shadow-lg hover:bg-green-700">
                üíæ Salvar Relat√≥rio
            </button>
        </form>
    </div>

    <script type="module">
        import { db } from './firebase-config.js';
        import { collection, addDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        document.getElementById('formFiscalizacao').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            try {
                const docRef = await addDoc(collection(db, "fiscalizacoes"), {
                    conselheiro: document.getElementById('conselheiro').value,
                    instituicao: document.getElementById('instituicao').value,
                    assunto: document.getElementById('assunto').value,
                    data_criacao: new Date().toISOString()
                });
                alert("‚úÖ Relat√≥rio salvo no Firebase! ID: " + docRef.id);
                window.location.href = 'index.html';
            } catch (e) {
                console.error("Erro ao salvar: ", e);
                alert("‚ùå Erro ao conectar ao Firebase. Verifique as chaves.");
            }
        });
    </script>
